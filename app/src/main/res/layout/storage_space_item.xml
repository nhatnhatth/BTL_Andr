<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/round_outline"
        android:padding="4dp">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:fontFamily="@font/itc_avant_garde_std_demi"
            android:text="Storage Space"
            android:textColor="#383B44"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_phone_storage"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/linearLayout1"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                app:layout_constraintEnd_toStartOf="@+id/imageView3"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="@+id/imageView2">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:background="#F1F2F6"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                    app:layout_constraintEnd_toStartOf="@+id/imageView3"
                    app:layout_constraintStart_toEndOf="@+id/imageView2"
                    app:layout_constraintTop_toTopOf="@+id/imageView2">

                    <LinearLayout
                        android:id="@+id/pr_image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#FE616D"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/pr_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#FFA614"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/pr_video"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#32CA8B"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/pr_zips"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#0DBCC7"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/pr_apps"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#5A26FB"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/pr_document"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#3194E7"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/pr_others"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#8359D2"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/pr_blank"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#F1F2F6"
                        android:orientation="horizontal" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/itc_avant_garde_std_md"
                android:text="115 GB / 128 GB"
                android:textColor="#383B44"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout1"
                app:layout_constraintStart_toEndOf="@+id/imageView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/gilroy_light"
                android:text="Internal Storage"
                android:textColor="#5B6674"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout1" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="15.75dp"
                android:layout_height="22.14dp"
                android:layout_marginEnd="8dp"
                android:padding="4dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_right_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_pr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/itc_avant_garde_std_md"
                android:text="70%"
                android:textColor="#7B7F9E"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/imageView3"
                app:layout_constraintEnd_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/textView5" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

            <ImageView
                android:id="@+id/ic_sd"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_sd_card"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/ly_sd1"
                android:layout_width="0dp"
                android:layout_height="18dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="@drawable/seek_bg"
                android:orientation="horizontal"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="@+id/ic_sd"
                app:layout_constraintEnd_toStartOf="@+id/iv_sd_next"
                app:layout_constraintStart_toEndOf="@+id/ic_sd"
                app:layout_constraintTop_toTopOf="@+id/ic_sd">

                <LinearLayout
                    android:id="@+id/ly_sd"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:background="#F1F2F6"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="@+id/ic_sd"
                    app:layout_constraintEnd_toStartOf="@+id/iv_sd_next"
                    app:layout_constraintStart_toEndOf="@+id/ic_sd"
                    app:layout_constraintTop_toTopOf="@+id/ic_sd">

                    <LinearLayout
                        android:id="@+id/pr_sd_image"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#FE616D"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/pr_sd_audio"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#FFA614"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/pr_sd_video"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#32CA8B"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/pr_sd_zips"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#0DBCC7"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/pr_sd_apps"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#5A26FB"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/pr_sd_document"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#3194E7"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/pr_sd_others"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#8359D2"
                        android:orientation="horizontal" />

                    <LinearLayout
                        android:id="@+id/pr_sd_blank"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#F1F2F6"
                        android:orientation="horizontal" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_sd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/itc_avant_garde_std_md"
                android:text="115 GB / 128 GB"
                android:textColor="#383B44"
                android:textSize="15sp"
                app:layout_constraintBottom_toTopOf="@+id/ly_sd1"
                app:layout_constraintStart_toEndOf="@+id/ic_sd" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/gilroy_light"
                android:text="Internal Storage"
                android:textColor="#5B6674"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/ic_sd"
                app:layout_constraintTop_toBottomOf="@+id/ly_sd1" />

            <ImageView
                android:id="@+id/iv_sd_next"
                android:layout_width="15.75dp"
                android:layout_height="22.14dp"
                android:padding="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_right_arrow"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sd_pr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/itc_avant_garde_std_md"
                android:text="70%"
                android:textColor="#7B7F9E"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/iv_sd_next"
                app:layout_constraintEnd_toStartOf="@+id/iv_sd_next"
                app:layout_constraintTop_toTopOf="@+id/tv_sd" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>